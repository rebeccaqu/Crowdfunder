  </div>

  <div class ="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class ="field">
    <%= f.label :funding_goal %><br />
    <%= f.number_field :funding_goal %>
  </div>

  <div class ="field">
    <%= f.label :category %><br />
    <%= f.text_field :category %>
  </div>

    <div class ="field">
    <%= f.label :start_date %><br />
    <%= f.date_field :start_date%>

  <div class ="field">
    <%= f.label :end_date %><br />
